<!--*** Comment Section Starts Here ***-->
<h3>Comments</h3>
<!-- TODO -->
    
<!-- 1. Check if there is no current user and show only comments -->
<% if (!currentUser) { %>
    <% post.comments.forEach(comment =>{ %>      <!-- loop through the array of comments to get each comments -->
    <main class="comment_container">
        <li>
                <p>
                    <%= comment.body %>
                </p>
            </li>
            <h5>by: 
               <%= comment.author.username %>
            </h5>
    </main>
    <% }) %>
    <!-- 2. Check if there is a current user -->
    <% } else if (currentUser) { %>
        <% post.comments.forEach(comment =>{ %>      <!-- loop through the array of comments to get each comments -->
        <main class="comment_container">
            <li>
                <p>
                    <%= comment.body %>
                </p>
            </li>
            <!-- code of the comment like and unlike button starts here  -->
            <% let commentLikeArr = []; %> <!-- converts array of objectID to array of stringsID -->
            <% comment.likes.forEach(like =>{ %>
                <%  commentLikeArr.push(like.toString()) %>
                <% }) %>
                
            <!-- 2.1 Check If Currentuser is not the author of post show comments, add comment section and like or unlike -->
            <% if (currentUser.id != comment.author.id) { %>
            <%  if (commentLikeArr.includes(currentUser.id)) {  %>
                <a href="/post/<%= post.id %>/comment/<%= comment.id %>/unlike"> Unlike <span> <%= comment.likes.length %></span></a>
                <% } else { %>
            <a href="/post/<%= post.id %>/comment/<%= comment.id %>/like"> like </a> <span><%= comment.likes.length %></span>
            <% } %>
            <!-- code for comment like and unlike button ends here -->
            <!-- 2.2 If Current User is the authour of post show Comments, like or unlike, edit and delete option -->
            <% } else if (currentUser.id == comment.author.id) { %>    
                <%  if (commentLikeArr.includes(currentUser.id)) {  %>
                    <a href="/post/<%= post.id %>/comment/<%= comment.id %>/unlike"> Unlike <span> <%= comment.likes.length %></span></a>
                <% } else { %>
                    <a href="/post/<%= post.id %>/comment/<%= comment.id %>/like"> like </a> <span><%= comment.likes.length %></span>
                <% } %>
                <a href="/post/<%= post.id %>/comment/<%= comment.id %>/edit">Edit</a>
                <a href="/post/<%= post.id %>/comment/<%= comment.id %>/delete">Delete</a>
            <% } %>
                <h5>by:
                        <%= comment.author.username %>
                </h5>
            </main>
            <% }) %>
            <main class="addComment_container">
                <form action="/post/<%= post.id %>/comment" method="post">
                    <p>Add Comment:</p>
                    <textarea class="comment" type="text" placeholder="Enter your comment" name="comment[body]" id="text" rows="10"
                    cols="40"></textarea>
                    <button type="submit">Submit</button>
            </main>
            </form>
            <% }  %>

        
