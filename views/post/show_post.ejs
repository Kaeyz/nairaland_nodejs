    <% if (!currentUser) { %>
        <main class="post_container">
            <h4>
                <%= post.title %>
            </h4>
            <p class="post">
                <%= post.post %>
            </p>
            <h5>
                author:<%= post.author.username %>
            </h5>
        </main>
