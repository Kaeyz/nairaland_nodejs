<% include ../partials/header %>

    <h2>Update Post</h2>

    <form action="/post/<%= post.id %>/update?_method=PUT" method="POST">
        <p>Post Title:</p>
        <input type="text" name="post[title]" value="<%= post.title %>">
        <p>New Post Body:</p>
        <textarea type="text" name="post[post]" rows="5" cols="40"><%= post.post %></textarea>
        <br>
        <button>Update Post</button>
    </form>

    <% include ../partials/footer  %>